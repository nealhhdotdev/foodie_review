<% if notice %>
  <div data-alert class="alert-box success">
      <strong><%= notice %></strong>
      <a href="#" class="close">&times;</a>
  </div>
<% else %>
<% end %>


<h1>Listing Restaurant Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Restaurant</th>
      <th>Body Summary</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody  align = 'center'>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.author %></td>
        <td><%= Restaurant.find_by_id(review.restaurant_id).name %></td>
        <td align = "left"><%= truncate(review.body, :length => 800) %></td>
        <td><%= review.rating %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

